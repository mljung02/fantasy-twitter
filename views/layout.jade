doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css')
    script(src="https://cdn.socket.io/socket.io-1.2.0.js")
    script(src="http://code.jquery.com/jquery-1.11.1.js")
  body
    header
      if currentUser
        nav(class="navbar navbar-inverse")
          div(class="container-fluid container")
            div(class="navbar-header")
              button(type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false")
                span(class="sr-only") Toggle navigation
                span(class="icon-bar")
                span(class="icon-bar")
                span(class="icon-bar")
              img.profile(src=currentUser.photos[0].value)
              span | 
              a(href='/users/profile/'+currentUser.id)= currentUser.displayName
            div(class="collapse navbar-collapse" id="bs-example-navbar-collapse-1")
              form(class="navbar-form navbar-right" action='/logout' method='get')
                button(type="submit" class="btn btn-default") Logout
      else
        nav(class="navbar navbar-inverse")
          div(class="container-fluid container")
            div(class="navbar-header")
              button(type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false")
                span(class="sr-only") Toggle navigation
                span(class="icon-bar")
                span(class="icon-bar")
                span(class="icon-bar")
            div(class="collapse navbar-collapse" id="bs-example-navbar-collapse-1")
              form(class="navbar-form navbar-right" role="search" action='/login/twitter' method='get')
                button(type="submit" class="btn btn-default") Login with Twitter
              div(class="collapse navbar-collapse" id="bs-example-navbar-collapse-1")
    block content
    script(src='/javascripts/app.js')
      